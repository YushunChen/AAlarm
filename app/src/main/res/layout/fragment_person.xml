<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:fontFamily="casual"
        android:text="Record Your Day!"
        android:textSize="26dp" />

    <ImageView
        android:id="@+id/water"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/water_bottle" />

    <ImageView
        android:id="@+id/fruit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/apple" />

    <ImageView
        android:id="@+id/running"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/running_shoes" />

    <ImageView
        android:id="@+id/brush"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/toothbrush" />

    ////////////////////////////////////////////////////////////////

    <ImageView
        android:id="@+id/sleep"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/sleeping" />

    <ImageView
        android:id="@+id/read"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/open_book" />

    <ImageView
        android:id="@+id/coding"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/laptop" />

    <ImageView
        android:id="@+id/shopping"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/carts" />

    <Button
        android:id="@+id/addAlarmButton"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="303dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/custom_button3"
        android:text="Record Your Own Activity" />


</RelativeLayout>